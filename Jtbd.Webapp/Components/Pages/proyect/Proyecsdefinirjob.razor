            </button>
            <button class="btn btn-secondary me-3" @onclick="MostrarClusteres" title="Ver Clusteres">
                <i class="bi bi-building"></i>
            </button>
        </div>
    </div>
</div>
@if (mostrarAlerta)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
