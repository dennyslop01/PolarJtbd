@page "/proyect/proyecscluster/{IdProyecto}/{userrol}"

@rendermode InteractiveServer
@inject IJSRuntime JSRuntime
@inject IConfiguration configuration
@inject ILogger<Proyecstories> Logger


<PageTitle>Historias</PageTitle>
<div class="row align-content-center">
    <div class="col-lg-11">
        <div class="col-lg-12">
            <button class="btn btn-link btn-sm me-2 align-content-end" title="Regresar" @onclick="Regresar2">
                @(proyecto == null ? "-" : "Proyectos")  <i class="bi bi-arrow-return-left"></i>
            </button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <h3 class="text-start mt-4">Clústeres de Historias y Grupos</h3>
            <div class="col-lg-12">
                <div class="d-flex justify-content-end mb-1">
                    @if (proyecto.StatusProject == 1)
                    {
                        @if (int.Parse(userrol) > 0 && int.Parse(userrol) < 3)
                        {
                            <button class="btn btn-primary m-1" @onclick="ImprimirClusteres" title="Imprimir Clústeres">
                                <i class="bi bi-printer"></i>
                            </button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-11">
        @if (mostrarAlerta)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @mensajeAlerta
                <button type="button" class="btn-close" @onclick="() => mostrarAlerta = false"></button>
            </div>
        }

        @if (clusteres is null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status"></div>
                <p>Cargando datos...</p>
            </div>
        }
        else if (!clusteres.Any())
        {
            <div class="alert alert-info text-center">No hay datos disponibles.</div>
        }
        else
        {
            <div class="row align-content-center">

            </div>
            <br />
        }
    </div>
</div>


@code {
    [Parameter]
    public string IdProyecto { get; set; }
    [Parameter]
    public string userrol { get; set; }

    private Projects proyecto = new();
    private List<Projects> clusteres = new();

    private string? mensajeAlerta;
    private bool mostrarAlerta = false;

    [Inject] private IProjects repoproyect { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            proyecto = (Projects)await repoproyect.GetByIdAsync(int.Parse(IdProyecto));
            clusteres = (List<Projects>)await repoproyect.GetAllAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex.Message);
            mensajeAlerta = ex.Message;
            mostrarAlerta = true;
        }
    }

    private void ImprimirClusteres()
    {
    }

        private void Regresar2()
    {
        try
        {
            NavigationManager.NavigateTo($"proyect/proyectos");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex.Message);
        }
    }

}

