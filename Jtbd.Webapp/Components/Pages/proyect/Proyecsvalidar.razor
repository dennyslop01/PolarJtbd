                        }

                        Tabla tabla = new Tabla()
                        {
                            IdStorie = item.IdStorie,
                            Nombre = $"{item.TitleStorie} - {item.IdInter.InterName}",
                            Tipo = "Pull",
                            IdGroup = grp.IdGroup,
                            Grupos = grp.GroupName,
                            Valor = (valor == null ? "-" : (valor == 1 ? "Si" : "No"))
                        };
                        registros.Add(tabla);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex.Message);
            mensajeAlerta = ex.Message;
            mostrarAlerta = true;
        }
    }

