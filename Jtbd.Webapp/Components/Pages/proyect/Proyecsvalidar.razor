            stories = (List<Stories>)await repository.GetByProjectIdAsync(int.Parse(IdProyecto));
            grupospush = (List<Groups>)await repogrupos.GetByProjectIdIndicadorAsync(int.Parse(IdProyecto), 0);
            grupospull = (List<Groups>)await repogrupos.GetByProjectIdIndicadorAsync(int.Parse(IdProyecto), 1);

