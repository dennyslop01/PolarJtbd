@page "/proyect/detalle/{IdStorie}/{userrol}"
@rendermode InteractiveServer

@inject IJSRuntime JSRuntime
@inject IConfiguration configuration
@inject ILogger<Proyecstories> Logger
@inject AuthenticationStateProvider authenticationStateProvider

<PageTitle>Historia Detalle</PageTitle>
<EditForm Model="@entidadActual">
    <div class="row align-content-center">
        <div class="col-lg-12">
            <div class="col-lg-11">
                <button class="btn btn-link btn-sm me-2 align-content-end" title="Regresar" @onclick="Regresar2">
                    @(entidadStorie.Project == null ? "-" : "Proyectos")  <i class="bi bi-arrow-return-left"></i>
                </button>&nbsp;/&nbsp;
                <button class="btn btn-link btn-sm me-2 align-content-end" title="Regresar" @onclick="Regresar3">
                    @(entidadStorie.IdInter == null ? "-" : "Entrevistados")  <i class="bi bi-arrow-return-left"></i>
                </button>&nbsp;/&nbsp;
                <button class="btn btn-link btn-sm me-2 align-content-end" title="Regresar" @onclick="Regresar">
                    @(entidadStorie == null ? "-" : "Historias")  <i class="bi bi-arrow-return-left"></i>
                </button>
            </div>
            <h3 class="text-start mt-4">@(entidadStorie.TitleStorie.Length > 30 ? entidadStorie.TitleStorie.Substring(0, 29) : entidadStorie.TitleStorie)</h3>
                <div class="d-flex justify-content-end mb-3">
                @if (entidadStorie.Project?.StatusProject == 1)
                {
                    @if (int.Parse(userrol) > 0 && int.Parse(userrol) < 3)
                    {
                        <button class="btn btn-success me-3" @onclick="GuardarEntidad" title="Actualizar Historia">
                            <i class="bi bi-save"></i>
                        </button>
                    }
                }
                <button class="btn btn-secondary me-3" @onclick="() => AgruparHistorias(entidadStorie.Project.IdProject.ToString())" title="Agrupar Historias">
                    <i class="bi bi-ui-checks"></i>
                </button>
                <button class="btn btn-secondary me-3" @onclick="() => MostrarMatriz(entidadStorie.Project.IdProject.ToString())" title="Matriz Historias">
                    <i class="bi bi-kanban"></i>
                </button>
            </div>
        </div>
    </div>
    @if (mostrarAlerta)
    {
        <div id="divAlerta" class="alert alert-success alert-dismissible fade show toast-container" role="alert" style="display:none;">
            @mensajeAlerta
            <button type="button" class="btn-close" @onclick="() => mostrarAlerta = false"></button>
        </div>
    }

    <div class="row align-content-center">
        <div class="mb-6">
            <label class="form-label"><strong>Contexto:</strong></label>
            <InputTextArea class="form-control" @bind-Value="entidadActual.ContextStorie" />
        </div>
        <div class="mb-6">
            <label class="form-label"><strong></strong></label>
        </div>
    </div>
<br />
<div class="row align-content-center" >
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-11">
                <label><strong>Pushes</strong></label>
            </div>
            <div class="col-lg-1 justify-content-end">
                @if (entidadStorie.Project?.StatusProject == 1)
                {
                    @if (int.Parse(userrol) > 0 && int.Parse(userrol) < 3)
                    {
                        <button class="btn btn-primary btn-sm" title="Pushes" @onclick="MostrarPushes">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    }
                }
            </div>
        </div>
        @if (pushstorie is null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status"></div>
                <p>Cargando datos...</p>
            </div>
        }
        else if (!pushstorie.Any())
        {
            <div class="alert alert-light text-center bg-opacity-25">No hay pushes disponibles.</div>
        }
        else
        {
            <br />
            <table class="table">
                <thead class="table">
                    <tr>
                        <th width="3%">#</th>
                        <th width="80%">Nombre</th>
                        <th width="15%"> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (p, index) in pushstorie.Select((p, i) => (p, i + 1)))
                    {
                        <tr>
                            <td width="3%">@index</td>
                            <td width="80%">@p.PushesGroups.PushName</td>
                                <td width="15%" class="text-end">
                                @if (entidadStorie.Project?.StatusProject == 1)
                                {
                                    @if (int.Parse(userrol) > 0 && int.Parse(userrol) < 3)
                                    {
                                        <button class="btn btn-success btn-sm me-2" title="Editar" @onclick="() => EditarPush(p.PushesGroups)">
                                            <i class="bi bi-pencil"></i> 
                                        </button>
                                        <button class="btn btn-danger btn-sm" title="Eliminar" @onclick="() => EliminarEntidad(1, p.PushesGroups.IdPush)" >
                                            <i class="bi bi-trash"></i> 
                                        </button>
                                    }
                                }
