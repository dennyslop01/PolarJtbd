        <div class="row">
            <div class="col-lg-11">
                <label><strong>Pulls</strong></label>
            </div>
            <div class="col-lg-1 align-content-end">
                @if (entidadStorie.Project?.StatusProject == 1)
                {
                    @if (int.Parse(userrol) > 0 && int.Parse(userrol) < 3)
                    {
                        <button class="btn btn-primary btn-sm" title="Pulls" @onclick="MostrarPulls">
