@code {
    [Parameter]
    public string userrol { get; set; }

    private bool isExpandSubNavP = false;
    private bool isExpandSubNav = false;

    private void UpdateWidth(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var width))
        {
            UIState.SetWidth(width);
        }
    }
}