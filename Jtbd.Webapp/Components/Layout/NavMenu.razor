@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid align-content-center" id="slideBoton">
        <input type="checkbox" id="menuToggle" title="Navigation menu" class="navbar-toggler" onclick="toggleBootstrapCollapse(event);" />
    </div>
    <div class="container-fluid align-content-center">
        <a class="navbar-brand" href="">
            <img src="logoinnova.png" id="imgLogo" />
        </a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div id="divtexto">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="proyect/proyectos">
                    <div><i class="bi bi-clipboard-data m-1"></i> Proyectos</div>
                </NavLink>
            </div>

            @if (userrol == 1)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"admin/categorias/{userrol}")">
                        <div><i class="bi bi-bezier2 m-1"></i> Categorías</div>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"admin/departamentos/{userrol}")">
                        <div><i class="bi bi-bezier m-1"></i> Departamentos</div>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"admin/usuarios/{userrol}")">
                        <div><i class="bi bi-person m-1"></i> Usuarios</div>
                    </NavLink>
                </div>
            }
        </div>
    </nav>

    <div>
        <nav class="nav flex justify-content-center">
            <div id="diviconos" style="display:none;">
                <div class="nav-item">
                    <NavLink class="nav-link" style="border: 1px solid #D3D3D3; border-radius:3px; width: 40px; height: 40px;" href="proyect/proyectos">
                            <div><i class="bi bi-clipboard-data" title="Proyectos"></i></div>
                    </NavLink>
                </div>

                @if (userrol == 1)
                {
                    <div class="nav-item">
                        <NavLink class="nav-link" style="border: 1px solid #D3D3D3; border-radius:3px; width: 40px; height: 40px;" href="@($"admin/categorias/{userrol}")">
                                <div><i class="bi bi-bezier2" title="Categorías"></i></div>
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" style="border: 1px solid #D3D3D3; border-radius:3px; width: 40px; height: 40px;" href="@($"admin/departamentos/{userrol}")">
                                <div><i class="bi bi-bezier" title="Departamentos"></i></div>
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" style="border: 1px solid #D3D3D3; border-radius:3px; width: 40px; height: 40px;" href="@($"admin/usuarios/{userrol}")">
                                <div><i class="bi bi-person" title="Usuarios"></i></div>
                        </NavLink>
                    </div>
                }
            </div>
        </nav>
    </div>
</div>

@code {
    public int userrol { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var userrolaux = await SessionStorage.GetAsync<string>("UserRol");
            if (!string.IsNullOrEmpty(userrolaux.Value))
            {
                userrol = int.Parse(userrolaux.Value);
            }
        }
        catch { }
        StateHasChanged();
    }
}